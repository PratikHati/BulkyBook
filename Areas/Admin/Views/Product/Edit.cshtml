@model ProductCategory

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 row p-1">
            <label asp-for="@Model.Product.Title" class="p-0"></label>
            <input asp-for="@Model.Product.Title" class="form-control" />
            <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="@Model.Product.Description" class="p-0"></label>
            <input asp-for="@Model.Product.Description" class="form-control" />
            <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.Product.ISBN" class="p-0"></label>
            <input asp-for="@Model.Product.ISBN" class="form-control" />
            <span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.Product.Author" class="p-0"></label>
            <input asp-for="@Model.Product.Author" class="form-control" />
            <span asp-validation-for="@Model.Product.Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.Product.ListPrice" class="p-0"></label>
            <input asp-for="@Model.Product.ListPrice" class="form-control" />
            <span asp-validation-for="@Model.Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="@Model.Product.Price50" class="p-0"></label>
            <input asp-for="@Model.Product.Price50" class="form-control" />
            <span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>
        </div>
        @*<div class="mb-3 row p-1">
            
            <select asp-for="@Model.Categories" asp-items="@Model.Categories" class="form-select">
              
            </select>
            <span asp-validation-for="@Model.Categories" class="text-danger"></span>
        </div>*@

        <div class="form-floating py-2 col-12">
            <select asp-for="@Model.Categories" asp-items="@Model.Categories" class="form-select border-0 shadow">
                <option disabled selected>--Select Category--</option>
            </select>
            <label asp-for="@Model.Categories" class="ms-2"></label>
            <span asp-validation-for="@Model.Categories" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border  form-control">
                    Back to List
                </a>
            </div>
        </div>


    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}