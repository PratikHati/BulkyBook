@model List<Product>
@{
    ViewData["Title"] = "Product List";
}

<form method="post">

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i>  Create New Product
                </a>
            </div>
        </div>


        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        ISBN
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Category
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product v in Model)
                {
                    <tr>
                        <td>
                            @v.Title
                        </td>
                        <td>
                            @v.ISBN
                        </td>
                        <td>
                            @v.Price
                        </td>
                        <td>
                            @v.Author
                        </td>
                        <td>
                            @v.CategoryId
                        </td>
                        <td>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@v.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@v.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</form>





